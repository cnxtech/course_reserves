<div id="course-details">
	<div id="main-details">
	  <h1>Course Reserves List Request</h1>
		<h2><%= (params[:cid] || @reserve.cid) if (params.has_key?(:cid) or (@reserve and @reserve.cid)) -%>: <%= (params[:desc] || @reserve.desc) if (params.has_key?(:desc) or (@reserve and @reserve.desc)) -%></h2>
		<input type="hidden" name="reserve[cid]" value="<%= (params[:cid] || @reserve.cid) if (params.has_key?(:cid) or (@reserve and @reserve.cid)) -%>" />
		<input type="hidden" name="reserve[desc]" value="<%= (params[:desc] || @reserve.desc) if (params.has_key?(:desc) or (@reserve and @reserve.desc)) -%>" />
		<input type="hidden" name="reserve[sid]" value="<%= (params[:sid] || @reserve.sid) if (params.has_key?(:sid) or (@reserve and @reserve.sid)) -%>" />
		<div class="section"><span>Instructor:</span> <%= (params[:instructor_names] || @reserve.instructor_names ) if (params.has_key?(:instructor_names) or (@reserve and @reserve.instructor_names))%></div>
		<input type="hidden" name="reserve[instructor_sunet_ids]" value="<%= (params[:instructors] || @reserve.instructor_sunet_ids ) if (params.has_key?(:instructors) or (@reserve and @reserve.instructor_sunet_ids))%>" />
		<input type="hidden" name="reserve[instructor_names]" value="<%= (params[:instructor_names] || @reserve.instructor_names ) if (params.has_key?(:instructor_names) or (@reserve and @reserve.instructor_names))%>" />
		<div class="section">Send request to
			<select id="libraries" name="reserve[library]">
				<option>(select library)</option>
				<% app_config.reserve_libraries.each do |email, library| %>
					<option <%= "selected='selected'" if @reserve and @reserve.library == library -%> value="<%= library -%>"><%= library -%></option>
				<% end %>
			</select>
		</div>
		<div class="section">
			When should these items be reserved?
			<div id="reserve-timing">
  			<input type="radio" id="immediate" name="reserve[immediate]" value="true" <%= "checked='checked'" if !@reserve or @reserve.immediate != "false" %> /> <label for="immediate">immediately</label><br/>
  			<input type="radio" id="future" name="reserve[immediate]" value="false" <%= "checked='checked'" if @reserve and @reserve.immediate == "false" %> />
  			<label for="future">for beginning of </label>
  			<select id="term" name="reserve[term]">
  				<option <%= "selected='selected'" if @reserve and @reserve.term == "Fall 2012" %>>Fall 2012</option>
  				<option <%= "selected='selected'" if @reserve and @reserve.term == "Winter 2012" %>>Winter 2012</option>
  				<option <%= "selected='selected'" if @reserve and @reserve.term == "Spring 2012" %>>Spring 2012</option>
  				<option <%= "selected='selected'" if @reserve and @reserve.term == "Summer 2012" %>>Summer 2012</option>
  			</select> 
  			<label for="term">quarter</label>
			</div>
		</div>
		
	</div>

	<fieldset id="list-management">				
		<h3>List management</h3>				
		<p>Who should the library contact about this list?</p>
		<label for="contact_name">Name</label> <input name="reserve[contact_name]" value="<%= @reserve.contact_name if @reserve -%>" id="contact_name" type="text" /><br/>
		<label for="contact_phone">Phone</label> <input name="reserve[contact_phone]"  value="<%= @reserve.contact_phone if @reserve -%>" id="contact_phone" type="text"/><br/>
		<label for="contact_email">Email</label> <input name="reserve[contact_email]" value="<%= @reserve.contact_email if @reserve -%>"  id="contact_email" type="text"/><br/>
		<label for="editor_sunet_ids" id="editors-list">Who can edit this list?</label><br/>
		<span class="form-label">jdoe,</span> <input name="reserve[editor_sunet_ids]" value="<%= @reserve.editor_sunet_ids if @reserve -%>" id="editor_sunet_ids" type="text"/><br/>
		<span class="help">(SUNet IDs, separated by commas)</span>					
	</fieldset>
  <div style="clear:both;"></div>
</div>	
<div>
  <table id="item_list_table">	
    <thead>		
    	<tr>
    		<th class="number">&nbsp;</th>
    		<th class="title">Title</th>
    		<th class="copies">Copies</th>
    		<th class="loan_period">Loan period</th>
    		<th class="delete">Delete</th>
    	</tr>
  	</thead>	
  	<tbody>
    	<% unless @reserve.blank? or @reserve.item_list.blank? %>
    		<% @reserve.item_list.each_with_index do |item, index| %>
    		  <%= render :partial => "reserves_item", :locals => { :item => item, :index => index }-%>
    		<% end %>
    	<% end %>	
    	<tr id="add_row" class="<%= cycle("odd","even") %>">
    		<td class="enumerator last-row"><%= (@reserve.blank? or @reserve.item_list.blank?) ? 1 : @reserve.item_list.length + 1 -%></td>
    		<td colspan="4">
    			Copy/paste an item URL or catkey from <%= link_to( "SearchWorks", "http://searchworks.stanford.edu/") %>.<br/>
    			<input type="text" id="sw_url" /> <%= link_to("add", { :controller => 'reserves', :action => 'add_item', :format => 'js', :sw => 'true' }, :remote => true, :class => "add-sw-item active-button") -%> - or - <%= link_to("Reserve an item that's not in SearchWorks", { :controller => 'reserves', :action => 'add_item', :format => 'js', :sw => 'false' }, :remote => true ) %>
    		</td>
    	</tr>
  	</tbody>		
  </table>
</div>